<div class="page-header">
  <h3>
    <a ng-show="post.link" href="{{post.link}}">
      {{post.title}}
         </a>
    <span ng-hide="post.link">
      {{post.title}}
         </span>
  </h3>
  <div>
    {{post.description}}
  </div>
</div>
<div flash-alert="info" active-class="in" class="alert fade" duration="1000">
  <strong class="alert-heading">Thanks!</strong>
  <span class="alert-message">{{flash.message}}</span>
</div>
<div ng-repeat="comment in post.comments | orderBy:'-like'">
  <span style="font-size:20px; margin-left:10px;">
    {{comment.body}}
        </span> - by {{comment.user.username}} with {{comment.like}} Likes
  <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementLikes(comment)"></span>
</div>
<form ng-submit="addComment()" style="margin-top:30px;">
  <h3> Add a new comment</h3>
  <div class="form-group">
    <input type="text" class="class-control" placeholder="Comment" ng-model="body"></input>
</div>
<button type="submit" class="btn btn-primary">Post</button>
</form>