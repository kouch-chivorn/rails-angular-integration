<div class="page-header">
  <h1>Flapper News</h1>
</div>
<div flash-alert="success" active-class="in" class="alert fade" duration="2000">
  <strong class="alert-heading">Welcome!</strong>
  <span class="alert-message">{{flash.message}}</span>
</div>

<div class="form-group">
  <span>Search By:
            <input type="text" ng-model="query" placeholder="Search" class="form-control"></input>
</span>
<br>
<span>Sort By:
          <select ng-model="posts.orderProp" class="form-control" style="width:30%">
    <option value="title">Alphabetically</option>
    <option value="view">Views</option>
    <option value="like">Likes</option>
  </select>
</span>
</div>
<div flash-alert="info" active-class="in" class="alert fade" duration="2000">
  <!-- <strong class="alert-heading">Thanks!</strong> -->
  <span class="alert-message">{{flash.message}}</span>
</div>

<div class="row" ng-controller="NavCtrl">
  <h2> List of All Posts </h2>
  <div dir-paginate="post in (filtered = (posts | filter:query)) | orderBy:posts.orderProp:true | itemsPerPage: postsPerPage" ng-class="{even: !$even, odd: !$odd}">
    <span style="font-size:20px; margin-left:10px;">
      <a ng-show="post.link" href="#/posts/{{post.id}}" class="capitalize">
        {{post.title | capitalize}}
      </a>
      <span ng-hide="post.link" >
        {{post.title | capitalize}}
      </span> has {{post.view}} views and {{post.like}} likes-----Posted by <a ng-href="#/users/{{post.user.username}}">{{post.user.username}}</a>
      <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementLikes(post)">
      </span>
    </span>
    <span>
      <a href="#/posts/{{post.id}}">Read more...</a>
    </span>
  </div>
  <p>Number of posts found: {{filtered.length}} </p>
  <!-- <dir-pagination-controls on-page-change="pageChanged(newPageNumber)" ></dir-pagination-controls> -->
  <dir-pagination-controls></dir-pagination-controls>
</div>

<div ng-controller="NavCtrl">
<div ng-controller="MainCtrl">
  <form ng-submit="addPost()" style="margin-top:30px;" ng-show="user.status">
  <h3>Add a new post</h3>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
</div>
<div class="form-group">
  <input type="text" class="form-control" placeholder="Link if any..." ng-model="link"></input>
</div>
<!-- <div class="form-group">
  <input ng-model="email" class="form-control" type="email" placeholder="Email" />
</div>
<div class="form-group">
  <input ng-model="author" class="form-control" type="text" placeholder="Author Name" />
</div> -->
<div class="form-group">
  <textarea class="form-control" ng-disabled="isDisabled" placeholder="Write your message here..." ng-model="description"></textarea>
</div>
<button type="submit" ng-disabled="!title||!description" class="btn btn-primary">Post</button>
<div ng-controller="MyController">
  <pre> {{previewText}} </pre>
</div>
</form>
</div>
</div>
